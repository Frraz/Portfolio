############################################################
#        ARQUIVO DE EXEMPLO (.env.example) - NÃO COMMITAR .env REAL
# Copie para .env e preencha os valores sensíveis.
# Nunca versionar senhas reais ou app passwords.
############################################################

############################
# EMAIL / FORMULÁRIO
############################
# APP PASSWORD do Gmail (ou outro provedor) – nunca a senha real da conta.
EMAIL_PASSWORD=your_email_app_password_here

# E-mail remetente (de onde a mensagem será enviada)
EMAIL_SENDER=your_email@gmail.com

# E-mail destinatário (quem recebe mensagens do formulário)
EMAIL_RECEIVER=receiver_email@gmail.com

############################
# CORS / ORIGENS PERMITIDAS
############################
# Lista de origens permitidas separadas por vírgula (sem espaços extras).
# Em produção, coloque seus domínios reais.
ALLOWED_ORIGINS=https://portfolio.ferzion.com.br,https://portifolio.ferzion.com.br

# Se quiser liberar tudo temporariamente (NÃO recomendável em produção):
ALLOW_ALL_CORS=false

############################
# SMTP / PERFORMANCE
############################
# Número de workers (threads) para envio de e-mail assíncrono via ThreadPool.
SMTP_WORKERS=3

############################
# LOGS / NÍVEL DE LOG
############################
# Nível de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

############################
# SEGURANÇA / HEADERS (opcional)
############################
# Ativar Strict-Transport-Security (use true somente após HTTPS estar funcionando).
ENABLE_HSTS=true

############################
# AMBIENTE
############################
# Ex: development | production
ENVIRONMENT=development

############################
# FUTURO (OPCIONAL / RESERVADO)
############################
# RATE_LIMIT_ENABLED=false
# RATE_LIMIT_CONTACT=5  # requisições por minuto em /contato/
# SENTRY_DSN=your_sentry_dsn_here

############################################################
# NOTAS:
# 1. Renomeie este arquivo para .env e edite os valores reais.
# 2. Mantenha este .env.example versionado como referência.
# 3. Nunca exponha EMAIL_PASSWORD em commits.
# 4. Se usar outra plataforma de envio (SES, Postmark, etc.) adapte as variáveis.
############################################################